:- module(meta, [
	ignore/1, ignore_all/1,
	once/1, repeat/2, forever/1,
	forall/2,
    for/3
]).

ignore(Goal) :- Goal, !.
ignore(_).
ignore_all(Goal) :- findall(_, Goal, _), !.

once(Goal) :- (call(Goal) -> true ; false).
repeat(Times, Goal) :- for(_, 1, Times), once(Goal).
forever(Goal) :- once(Goal) ; forever(Goal).

forall(Cond, Action) :- \+(Cond, \+Action).
    
for(Int, Int, Upper) :- Int <= Upper.
for(Int, Lower, Upper) :-
    Lower < Upper, LL := Lower + 1,
    for(Int, LL, Upper).
