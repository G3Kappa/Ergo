:- module(list, [
	member/2, length/2, append/3,
	select/3
]).

:- op(15, xfy, ['|']).

member(_, []) :- false.
member(X, [Y|T]) :- (X = Y; member(X, T)).

length([], N, N).
length([_|List], N, N0) :-
  N1 is N0+1,
  length(List, N, N1).
length(L, N) :- length(L, N, 0).

append([], L, L).
append([H|T], L, [H|R]) :- append(T, L, R).

select([], [], _) :- !.
select([H1|T1], [H2|T2], Lambda) :-
	call(Lambda, H1, H2),
	select(T1, T2, Lambda).