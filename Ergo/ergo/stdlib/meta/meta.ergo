:- module(meta, [
	ignore/1,
	once/1, repeat/2, forever/1,
	forall/2,
    for/3
]).
    
ignore(Goal) :- Goal, !.
ignore(_).

once(Goal) :- (call(Goal) -> true ; false).
repeat(Times, Goal) :- range(0<=X<Times), once(Goal).
forever(Goal) :- once(Goal) ; forever(Goal).

forall(Cond, Action) :- \+(Cond, \+Action).
    
for(Int, Int, _Upper).
for(Int, Lower, Upper) :-
    Lower < Upper,
    Next is Lower + 1,
    for(Int, Next, Upper).