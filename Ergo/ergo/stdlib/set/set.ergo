:- module(set, [
    intersection/3, difference/3
]).

intersection(A, B, Intersection) :-
    difference(A, B, Diff),
    difference(A, Diff, Intersection).

difference(A, B, Difference) :-
    union(Difference, B, A).

symmetric_difference(A, B, Difference) :-
    difference(A, B, D1),
    difference(B, A, D2),
    union(D1, D2, Difference).