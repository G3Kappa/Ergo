:- module(todo, [
	tag/2, subtag/2, todo/2, todo_find/2
]).

% ----

todo_find(Tag, todo(Name, Tags)) :- todo(Name, Tags), member(T, Tags), (Tag = T ; subtag(T, Tag)).

subtag(Tag, Parent) :- tag(Tag, Parent).
subtag(Tag, Parent) :- tag(Tag, P), subtag(P, Parent).

% ----

