:- module(meta, [
	call/1,
	ignore/1,
	once/1,
	forall/2,
	maplist/2, maplist/3
]).
call(Goal) :- Goal.

ignore(Goal) :- Goal, !.
ignore(_).

once(Goal) :- (call(Goal) -> true ; false).

forall(Cond, Action) :- \+(Cond, \+Action).

maplist(_, []).
maplist(Pred, [L|Ls]) :- 
	call(Pred, L), 
	maplist(Pred, Ls).

maplist(_, [], []).
maplist(Pred, [A|As], [B|Bs]) :-
    call(Pred, A, B),
    maplist(Pred, As, Bs).