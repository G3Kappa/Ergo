:- module(example, []).
:- use_module(ui).

init :- canvas(size(500, 500)), fps(144).

draw(time(_T)) :- (
	mouse(point(X, Y)),
	translate(point(25, 25), 
		blit(red, rectangle(point(X, Y), size(50, 50)))
	),
	Radius is sin(_T * 10) * 100 + 10,
	blit(green, circle(point(X, Y), Radius))
), ! ; error.